{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/information-hub",
	"version": "0.1.0",
	"title": "Information Hub",
	"category": "design",
	"icon": "info",
	"description": "Create an information hub with up to 6 customizable cards, different list types, and color options.",
	"example": {},
	"attributes": {
		"sectionTitle": {
			"type": "string",
			"default": "Information Hub"
		},
		"sectionDescription": {
			"type": "string",
			"default": ""
		},
		"cards": {
			"type": "array",
			"default": [
				{
					"id": "card-1",
					"title": "Card Title",
					"listType": "links",
					"items": [
						{
							"text": "Item 1",
							"url": "#"
						}
					],
					"backgroundColor": "#FFF4E6",
					"borderColor": "#FF8C00"
				}
			]
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"textdomain": "information-hub",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}